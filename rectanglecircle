#include<iostream>
#include<cstdio>
#include <cmath>
#include<iomanip>
using namespace std;
int main ()
{
	float base;
	float height;
	float areaofrectangle;
	float areaofhalfrectangle;
	float areaofhalfcircle;
	float entirearea;
	const float pi=3.14;
	cout<<"Enter the height of the rectangle";
	cin>>height;
	cout<<"Enter the width of the rectangle";
	scanf("%f",&base);
	areaofrectangle=base*height;
	areaofhalfrectangle=areaofrectangle/2;
	areaofhalfcircle=((pow((height/2),2))*pi)/2;
	entirearea=areaofrectangle+areaofhalfcircle;
	cout<<endl;
	printf(" the area for half the rectangle%.2f",areaofhalfrectangle);
	cout<<endl;
	printf(" the area for the half circle%.2f",areaofhalfcircle);
	cout<<endl;
	printf("the area for the entire shape%.2f",entirearea);
	cout<<endl <<" The following is a repeat."<<endl;
	cout<<endl<<fixed<<setprecision(2)<<
	"The area for half of the rectangle is:" <<areaofhalfrectangle<<
	endl<<"The area for the half circle is:"<<areaofhalfcircle<<endl
	<<"The area for the entire shape is:"<<entirearea<<endl;
	return 0;
	
	
}
